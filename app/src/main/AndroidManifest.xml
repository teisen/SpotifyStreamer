<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.steelgirderdev.spotifystreamer" >

    <!-- internet permission to communicate with Spotify -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.ArtistSearchActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.TopTracksActivity"
            android:label="@string/title_activity_top_tracks"
            android:launchMode="singleTask"
            android:parentActivityName=".ui.ArtistSearchActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.ArtistSearchActivity" />
>
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:launchMode="singleTask"
            android:parentActivityName=".ui.ArtistSearchActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.ArtistSearchActivity" />
>
        </activity>
        <activity
            android:name=".ui.PlayerActivity"
            android:label="@string/title_activity_player"
            android:parentActivityName=".ui.TopTracksActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.TopTracksActivity" />
        </activity>

        <service
            android:name=".service.MediaPlayerService"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>

</manifest>
